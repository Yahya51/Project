<%- include('../partials/header.ejs') %>
  <%- include('./myNav.ejs') %>

    <section>

      <!-- <%= userData %> -->

      <table class="table table-bordered table-striped w-75 mx-auto mt-4 text-center"
        style="box-shadow: 1px 1px 8px 1px black;">
        <thead class="table-dark">
          <tr>
            <th>User Name</th>
            <th>Password</th>
            <th>Email</th>
            <th>Active</th>
            <th>Role</th>
            <th>Joining Date</th>
            <th>Edit</th>
            <th>Delete</th>

          </tr>
        </thead>

        <tbody>
          <% userData.forEach((user)=>{ %>
            <tr>
              <td>
                <%= user.userName %>
              </td>
              <td>
                <%= user.password %>
              </td>
              <td>
                <%= user.emailId %>
              </td>
              <td>
                <%= user.isActive %>
              </td>
              <td>
                <%= user.hasRole %>
              </td>
              <td>
                <%= new Date(user.regDate).toLocaleDateString() %>
              </td>
              <td>
                <a href="/admin/editUser/<%= user._id %>">Edit</a>
              </td>
              <td>
                <a href="/admin/deleteUser/<%= user._id %>" class="btn btn-danger btn-sm">Delete</a>
              </td>
            </tr>
            <% }) %>


        </tbody>
      </table>


    </section>
    <%- include('../partials/footer.ejs') %>